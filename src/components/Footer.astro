---
import { profileConfig } from '../config'
import { url } from '../utils/url-utils'

const currentYear = new Date().getFullYear()
---

<!--<div class="border-t border-[var(&#45;&#45;primary)] mx-16 border-dashed py-8 max-w-[var(&#45;&#45;page-width)] flex flex-col items-center justify-center px-6">-->
<div class="mx-32 my-10 border-t border-dashed border-black/10 transition dark:border-white/15">
</div>
<!--<div class="transition bg-[oklch(92%_0.01_var(&#45;&#45;hue))] dark:bg-black rounded-2xl py-8 mt-4 mb-8 flex flex-col items-center justify-center px-6">-->
<div
  class="mb-12 flex flex-col items-center justify-center rounded-2xl border-dashed border-[oklch(85%_0.01_var(--hue))] px-6 transition dark:border-white/15"
>
  <div class="text-50 text-center text-sm transition">
    &copy; <span id="copyright-year">{currentYear}</span>
    {profileConfig.name}. All Rights Reserved. /
    <a
      class="link font-medium text-[var(--primary)] transition"
      target="_blank"
      href={url('rss.xml')}>RSS</a
    > /
    <a
      class="link font-medium text-[var(--primary)] transition"
      target="_blank"
      href={url('sitemap-index.xml')}>Sitemap</a
    ><br />
    Powered by
    <a
      class="link font-medium text-[var(--primary)] transition"
      target="_blank"
      href="https://astro.build">Astro</a
    > &
    <a
      class="link font-medium text-[var(--primary)] transition"
      target="_blank"
      href="https://github.com/saicaca/fuwari">Fuwari</a
    >
  </div>
</div>
